<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_layout"
    android:descendantFocusability="blocksDescendants"
    tools:context=".MainActivity2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/PFP"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/chat_avec_lunettes"
            tools:layout_editor_absoluteX="163dp"
            tools:layout_editor_absoluteY="118dp" />

        <Button
            android:id="@+id/modifier_profil"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Modifier Profil"
            android:textColor="@color/white"
            android:backgroundTint="@color/Yellow"/>

        <TextView
            android:id="@+id/adresse_mail"
            android:layout_width="300dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/radius_recherche"
            android:gravity="center"
            android:alpha="1"
            android:text="lucy.dpr@edu.ece.fr"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="22sp"
            android:textStyle="bold"
            android:visibility="visible"
            tools:layout_editor_absoluteX="119dp"
            tools:layout_editor_absoluteY="430dp" />

        <TextView
            android:id="@+id/pseudo"
            android:layout_width="300dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/radius_recherche"
            android:gravity="center"
            android:alpha="1"
            android:visibility="visible"
            android:text="Lucy D"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tel"
            android:layout_width="300dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/radius_recherche"
            android:clickable="true"
            android:alpha="1"
            android:focusable="true"
            android:gravity="center"
            android:visibility="visible"
            android:text="06.54.95.48.23"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="22sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            app:srcCompat="@drawable/ece_logo"/>

    </LinearLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/barre_de_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/bottom_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>